     <!--Slider-->
     <script src="/javascripts/slider.js" type="text/javascript" charset="utf-8"></script>
     <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>
     <script src="/javascripts/jquery.sliderPro.min.js" type="text/javascript" charset="utf-8"></script>
    <link href="/stylesheets/slider-pro.min.css" rel="stylesheet" type="text/css">
    <script type="text/javascript">
        $( document ).ready(function( $ ) {
            $( '#slider' ).sliderPro({
                width: 900,
                height: 400,
                fade: true,
                arrows: true,
                buttons: false,
                fullScreen: true,
                shuffle: true,
                mediumSize: 1000,
                thumbnailArrows: true,
                autoplay: false
            });
        });
    </script>
    <style type="text/css">
    .view_context{
        display: block;
        margin : 20px auto;
        width: 80%;
        min-height: 400px;
        border: 2px solid black;
    }
    #slider .sp-selected-thumbnail {
                border: 4px solid #000;
            }

    .form-control {
                height : 370px;
            }

     </style>

    <div class="admin_view_wrap">
        <div class="admin_view_title">
            <h1>Admin View</h1>
            <a href="/admin/<%=board_data[0].id%>/del"><button>삭제</button></a>
        </div>
        <div class="admin_view_body">
            <table class="view_item">
                <div class="view_img">

                    <div id="slider" class="slider-pro">
                                <div class="sp-slides">
                                    <%
                                        for(var i=0;i<img_arr.length;i++)
                                        {
 %>
                                    <div class="sp-slide">
                                        <img class="sp-image"
                                             data-src="/USER/<%=board_data[0].id%>/images/<%=img_arr[i]%>"/>
                                    </div>
                                    <%}%>
                                </div>

                                <div class="sp-thumbnails">
                                    <%
                                    for(var i=0;i<img_arr.length;i++)
                                    {
                                    %>
                                    <img class="sp-thumbnail" src="/USER/<%=board_data[0].id%>/images/<%=img_arr[i]%>"/>
                                    <%}%>
                                </div>
                    </div>

                </div>
                <div class="view_context">
<%
                    var board = board_data[0];
 %>
                    <div class="context_title" id="contextTitle">
                        <h3><strong><%=board.title%> </strong></h3>
                    </div>
                    <div class="context_body" id="contextBody">
                        <div class="form-control" rows="15" type="text" readonly placeholder="내용">
                            <%-board.content%>
                        </div>
                    </div>
                </div>
            </table>

        </div>

    </div>
